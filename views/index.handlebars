<div class="container">
  <div class="row">
    <div class="center col-sm-12">
      <h1 class="title">Eat-Da-Burger</h1>
      <p></p>
    </div>
  </div>
  <!-- end .row -->
</div>

<div class="container">
  <div class="row">
    <div class="col-sm-6">
      <h2>Burgers that are not devoured!</h2>
        {{#each burgers}}
        {{#unless devoured}}
        {{this.id}}
        {{this.burger_name}}
        {{> burgers/burger-block devoured=true}}
        {{/unless}}
        {{/each}}
    </div>

    <div class="col-sm-6">
      {{!-- Burgers that han been devoured --}}
      <h2>Burgers that are devoured!</h2>
      <ul>
        {{#each burgers}}
        {{#if devoured}}
        <br>
        {{this.id}}
        {{this.burger_name}}
        {{!-- {{> burgers/burger-block devoured=false}} --}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>


<div class="container" id="add">
  <div class="row">
    <div class="center col-sm-12">
      <h2>Add a Burger</h2>
      <form class="create-form">
        <div class="form-group">
          <label for="ca">Burger Name:</label>
          <input type="text" id="ca" name="name">
        </div>
        <button class="btn-primary" type="submit">Submit</button>
        		<p>Enter a burger you want to eat. Click the submit button..</p>
      </form>
    </div>
  </div>
</div>
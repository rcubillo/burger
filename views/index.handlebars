<div class="container bg">

	<div class="row">
	    <div class="center col-sm-12">
	        <h1>Eat-Da-Burger</h1>
	        <p></p>
	    </div>
  	</div>
	<!-- end .row -->

	<div class="row">
	    <div class="col-sm-6"><br>
			{{!-- Left side, burgers available to been eaten. --}}
			<ul>
			  {{#each burgers}}
			    {{#unless this.devoured}}
			      <li>
			      	{{this.id}}
			        {{this.burger_name}}

			        <form action="/{{this.id}}?_method=PUT" method="POST">
			          <input type="hidden" name="devoured" value="true">
			          <button class="btn-primary" type="submit">Devour It!</button>
			        </form>

			      </li>
			    {{/unless}}
			  {{/each}}
			</ul>
	    </div>

	    <div class="col-sm-6">
				{{!-- Burgers that han been devoured --}}
			  {{#each burgers}}
			    {{#if this.devoured}}
			      <li>
			      	{{this.id}}
			        {{this.burger_name}}

			      </li>
			    {{/if}}
			  {{/each}}

	    </div>

  	</div>
	<!-- end .row -->

	<div class="row">
	    <div class="center col-sm-12">

			<h2>Add A Burger!</h2>

			<form class="create-update-form" action="/" method="POST">

			  <div class="form-group">
			    <p>Enter a burger you want to eat. Click the submit button..</p>
			    <input type="text" id="ca" name="burger_name">
			  </div>

			  <button class="btn-primary" type="submit">Submit</button>
			</form>

	    </div>

  	</div>
	<!-- end .row -->

</div>
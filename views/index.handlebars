<div class="container bg">

	<div class="row">
		<div class="center col-sm-12">
			<h1 class="title">Eat-Da-Burger</h1>
			<p></p>
		</div>
	</div>
	<!-- end .row -->

	<div class="row">
		<div class="col-sm-6"><br>
			{{!-- Left side, burgers available to been eaten. --}}
			<ul>

				{{#each burgers}}
				{{#unless this.devoured}}
				{{this.id}}
				{{this.burger_name}}
				{{> burger/burger-block devoured=true}}
				{{/unless}}
				{{/each}}

			</ul>
		</div>


		<div class="col-sm-6">
			{{!-- Burgers that han been devoured --}}
			<ul>
				<li>
					{{#each burgers}}
					{{#if this.devoured}}
					{{this.id}}
					{{this.burger_name}}
					{{> burger/burger-block devoured=false}}
					{{/if}}
					{{/each}}
				</li>
			</ul>
		</div>

	</div>
	<!-- end .row -->


	<div class="container" id="add">
		<div class="row">
			<div class="center col-sm-12">
				<h2>Add A Burger!</h2>
				<form class="create-update-form" action="/" method="POST">
					<div class="form-group">
						<p>Enter a burger you want to eat. Click the submit button..</p>
						<input type="text" id="ca" name="burger_name">
					</div>
					<button class="btn-primary" type="submit">Submit</button>
				</form>
			</div>
		</div>
	</div>

</div>